<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.example.intern.ptp.views.widgets.RoundedImageView
        android:id="@+id/resident_profile_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/alerts_alert_profile_picture"
        android:src="@drawable/profile32" />

    <TextView
        android:id="@+id/resident_name"
        style="@style/TextAppearance.ContentLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/resident_profile_picture"
        android:layout_marginStart="56dp"
        android:text="Tim Cook" />

    <TextView
        android:id="@+id/resident_location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/resident_name"
        android:layout_below="@id/resident_name"
        android:layout_marginEnd="5dp"
        android:text="@string/fa_map" />

    <TextView
        android:id="@+id/resident_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resident_name"
        android:layout_toEndOf="@id/resident_location_icon"
        android:text="B1-5" />

</RelativeLayout>