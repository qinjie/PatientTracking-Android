<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resident.ResidentFragment">

    <ProgressBar
        android:id="@+id/resident_progress_indicator"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal" />

    <RelativeLayout
        android:id="@+id/resident_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/resident_map_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:spinnerMode="dropdown" />

        <ListView
            android:id="@+id/resident_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/resident_map_spinner" />

    </RelativeLayout>
</FrameLayout>