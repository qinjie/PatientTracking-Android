<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="4dp">

    <TextView
        android:id="@+id/navigation_primary_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:text="@string/fa_bell" />

    <TextView
        android:id="@+id/navigation_primary_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:text="Alerts"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/navigation_primary_additional_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/navigation_primary_label"
        android:gravity="end"
        android:text="2"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>