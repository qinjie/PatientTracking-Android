<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/navigation_primary_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="icon"
         />

    <TextView
        android:id="@+id/navigation_primary_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:layout_toEndOf="@id/navigation_primary_icon"
        android:layout_marginStart="20dp"
        android:text="Alerts"
         />

    <TextView
        android:id="@+id/navigation_primary_additional_information"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:layout_toEndOf="@id/navigation_primary_label"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:text="2"
        />

</RelativeLayout>