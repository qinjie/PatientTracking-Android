<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/navigation_primary_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:text="@string/fa_icon_bell" />

    <TextView
        android:id="@+id/navigation_primary_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/navigation_primary_icon"
        android:text="Alerts"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/navigation_primary_additional_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/navigation_primary_label"
        android:gravity="end"
        android:text="2"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>